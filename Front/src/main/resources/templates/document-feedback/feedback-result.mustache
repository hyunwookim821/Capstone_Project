{{>layout/header}}
<div class="h-20 md:h-24"></div>

<!-- Main Content -->
<main class="container mx-auto px-6 py-12">
    <div class="text-center mb-12 fade-in">
        <div class="w-20 h-20 bg-gradient-to-br from-blue-400 to-purple-400 rounded-3xl flex items-center justify-center mx-auto mb-6">
            <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
        </div>
        <h1 class="text-4xl md:text-5xl font-bold text-gray-800 mb-6">
            AI 서류 분석 결과
        </h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            AI가 사용자의 서류를 꼼꼼하게 분석하고 피드백을 제공합니다.
        </p>
    </div>

    <div class="max-w-6xl mx-auto space-y-10">
        <!-- 맞춤법 검사 섹션 -->
        <div class="bg-white rounded-3xl p-8 shadow-lg fade-in">
            <h2 class="text-2xl font-bold text-gray-800 mb-6">맞춤법 검사 결과</h2>
            <div class="grid md:grid-cols-2 gap-6">
                <div>
                    <h3 class="text-lg font-semibold text-gray-700 mb-3">원본 내용</h3>
                    <textarea id="originalText" class="w-full h-64 p-4 border-2 border-gray-200 rounded-lg bg-gray-50" readonly>{{originalText}}</textarea>
                </div>
                <div>
                    <h3 class="text-lg font-semibold text-gray-700 mb-3">수정된 내용</h3>
                    <textarea id="correctedText" class="w-full h-64 p-4 border-2 border-blue-300 rounded-lg bg-blue-50" readonly>{{correctedText}}</textarea>
                </div>
            </div>
        </div>

        <!-- AI 종합 피드백 섹션 -->
        <div class="bg-white rounded-3xl p-8 shadow-lg fade-in-delay">
            <h2 class="text-2xl font-bold text-gray-800 mb-6">AI 종합 피드백</h2>
            <div id="feedback-container" class="prose lg:prose-xl max-w-none p-6 bg-gray-50 rounded-2xl min-h-[150px]">
                <!-- JS에 의해 내용이 채워집니다 -->
            </div>
            <div id="feedback-data" class="hidden">{{feedback}}</div>
        </div>

        <!-- 다음 단계 버튼 (초기에는 숨김) -->
        <div id="next-step-container" class="text-center mt-12 hidden">
            <a href="/document-feedback/interview-questions" class="bg-gradient-to-r from-blue-500 to-purple-500 text-white px-12 py-4 rounded-2xl text-lg font-semibold hover:from-blue-600 hover:to-purple-600 transition-all transform hover:scale-105 shadow-lg">
                AI 예상 면접 질문 생성하기
            </a>
        </div>
    </div>
</main>

<!-- marked.js CDN -->
<script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
<script>
document.addEventListener('DOMContentLoaded', () => {
    const feedbackDataEl = document.getElementById('feedback-data');
    const feedbackContainer = document.getElementById('feedback-container');
    const resumeId = '{{resumeId}}';

    const feedbackContent = feedbackDataEl.textContent.trim();

    if (feedbackContent) {
        // 피드백 내용이 있으면 렌더링하고 다음 단계 버튼 표시
        feedbackContainer.innerHTML = marked.parse(feedbackContent);
        document.getElementById('next-step-container').classList.remove('hidden');
    } else {
        // 피드백 내용이 없으면 버튼 생성
        const buttonPlaceholder = document.createElement('div');
        buttonPlaceholder.className = 'text-center';
        buttonPlaceholder.id = 'feedback-placeholder';
        buttonPlaceholder.innerHTML = `
            <p class="text-gray-500 mb-4">아래 버튼을 눌러 AI 피드백을 받아보세요.</p>
            <button id="get-feedback-btn" class="bg-blue-500 text-white px-6 py-2 rounded-lg font-semibold hover:bg-blue-600 transition-colors">
                <span class="spinner mr-2" style="display: none;"></span>
                AI 피드백 받기
            </button>
        `;
        feedbackContainer.appendChild(buttonPlaceholder);

        const getFeedbackBtn = document.getElementById('get-feedback-btn');
        getFeedbackBtn.addEventListener('click', () => {
            const spinner = getFeedbackBtn.querySelector('.spinner');
            spinner.style.display = 'inline-block';
            getFeedbackBtn.disabled = true;

            fetch(`/document-feedback/feedback/${resumeId}`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
            })
            .then(response => {
                if (!response.ok) {
                    return response.text().then(text => {
                        throw new Error(`HTTP error! status: ${response.status}, body: ${text}`);
                    });
                }
                return response.text(); // 응답을 텍스트로 받음
            })
            .then(text => {
                const data = JSON.parse(text); // 텍스트를 JSON으로 파싱
                const feedbackText = data.ai_feedback || ''; // 키 이름이 ai_feedback 임
                feedbackContainer.innerHTML = marked.parse(feedbackText);
                document.getElementById('next-step-container').classList.remove('hidden');
            })
            .catch(error => {
                console.error('Error fetching AI feedback:', error);
                alert('AI 피드백을 가져오는 중 오류가 발생했습니다. 개발자 콘솔(F12)을 확인해주세요.');
                spinner.style.display = 'none';
                getFeedbackBtn.disabled = false;
            });
        });
    }
});
</script>
<style>
    .spinner {
        display: inline-block;
        width: 1rem;
        height: 1rem;
        border: 2px solid rgba(255,255,255,0.3);
        border-radius: 50%;
        border-top-color: #fff;
        animation: spin 1s ease-in-out infinite;
    }
    @keyframes spin {
        to { transform: rotate(360deg); }
    }
</style>

