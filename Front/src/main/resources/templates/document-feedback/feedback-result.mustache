{{>layout/header}}
<div class="h-20 md:h-24"></div>

<!-- Main Content -->
<main class="container mx-auto px-6 py-12">
    <div class="text-center mb-12 fade-in">
        <div class="w-20 h-20 bg-gradient-to-br from-blue-400 to-purple-400 rounded-3xl flex items-center justify-center mx-auto mb-6">
            <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
        </div>
        <h1 class="text-4xl md:text-5xl font-bold text-gray-800 mb-6">
            AI 서류 분석 결과
        </h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            AI가 사용자의 서류를 꼼꼼하게 분석하고 피드백을 제공합니다.
        </p>
    </div>

    <div class="max-w-6xl mx-auto space-y-10">
        <!-- 맞춤법 검사 섹션 -->
        <div class="bg-white rounded-3xl p-8 shadow-lg fade-in">
            <h2 class="text-2xl font-bold text-gray-800 mb-6">맞춤법 검사 결과</h2>
            <div class="grid md:grid-cols-2 gap-6">
                <div>
                    <h3 class="text-lg font-semibold text-gray-700 mb-3">원본 내용</h3>
                    <textarea id="originalText" class="w-full h-64 p-4 border-2 border-gray-200 rounded-lg bg-gray-50" readonly>{{originalText}}</textarea>
                </div>
                <div>
                    <h3 class="text-lg font-semibold text-gray-700 mb-3">수정된 내용</h3>
                    <textarea id="correctedText" class="w-full h-64 p-4 border-2 border-blue-300 rounded-lg bg-blue-50" readonly>{{correctedText}}</textarea>
                </div>
            </div>
        </div>

        <!-- AI 종합 피드백 섹션 -->
        <div class="bg-white rounded-3xl p-8 shadow-lg fade-in-delay">
            <h2 class="text-2xl font-bold text-gray-800 mb-6">AI 종합 피드백</h2>
            <div id="feedbackArea" class="p-6 bg-gray-50 rounded-2xl min-h-[150px] flex items-center justify-center">
                <button id="requestFeedbackBtn" class="bg-gradient-to-r from-blue-400 to-purple-400 text-white px-8 py-4 rounded-xl text-lg font-semibold hover:from-blue-500 hover:to-purple-500 transition-all transform hover:scale-105 shadow-lg">
                    수정된 내용으로 AI 피드백 받기
                </button>
                <div id="feedbackContent" class="hidden text-gray-800 whitespace-pre-line">
                    <!-- AI 피드백이 여기에 표시됩니다. -->
                </div>
                <div id="loadingSpinner" class="hidden">
                    <svg class="animate-spin h-8 w-8 text-blue-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                    </svg>
                    <p class="mt-2 text-gray-600">AI가 피드백을 생성하고 있습니다. 잠시만 기다려주세요...</p>
                </div>
            </div>
            <!-- 예상 면접 질문 버튼 -->
            <div id="interviewQuestionBtnContainer" class="hidden text-center mt-6">
                <a href="/document-feedback/interview-questions" class="bg-green-500 text-white px-8 py-4 rounded-xl text-lg font-semibold hover:bg-green-600 transition-all transform hover:scale-105 shadow-lg">
                    예상 면접 질문 받아보기
                </a>
            </div>
        </div>
    </div>
</main>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const requestFeedbackBtn = document.getElementById('requestFeedbackBtn');
        const loadingSpinner = document.getElementById('loadingSpinner');
        const feedbackContent = document.getElementById('feedbackContent');

        requestFeedbackBtn.addEventListener('click', async function() {
            // UI 업데이트: 버튼 숨기고 로딩 스피너 표시
            requestFeedbackBtn.classList.add('hidden');
            loadingSpinner.classList.remove('hidden');
            feedbackContent.classList.add('hidden');

            try {
                const response = await fetch('/api/feedback/ai-feedback', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                });

                if (response.ok) {
                    const result = await response.json();
                    feedbackContent.textContent = result.feedback; // 'feedback' 필드 사용
                    feedbackContent.classList.remove('hidden');
                    document.getElementById('interviewQuestionBtnContainer').classList.remove('hidden'); // 버튼 컨테이너 표시
                } else {
                    alert('AI 피드백 요청에 실패했습니다.');
                    requestFeedbackBtn.classList.remove('hidden');
                }
            } catch (error) {
                console.error('AI feedback request error:', error);
                alert('AI 피드백 요청 중 오류가 발생했습니다.');
                requestFeedbackBtn.classList.remove('hidden');
            } finally {
                loadingSpinner.classList.add('hidden');
            }
        });
    });
</script>

{{>layout/footer}}
