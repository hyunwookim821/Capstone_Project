<script>
    // Sample user data
    const userData = {
        name: "홍길동",
        email: "hong@example.com",
        phone: "010-1234-5678",
        birthdate: "1990-01-01",
        desired_position: "프론트엔드 개발자",
        desired_industry: "IT/소프트웨어",
        career_years: "3-5년",
        career_description: "React 기반 웹 애플리케이션 개발 경험 3년\n주요 프로젝트: 전자상거래 플랫폼 프론트엔드 개발",
        education: "대학교 졸업",
        major: "컴퓨터공학",
        skills: "JavaScript, React, TypeScript, HTML/CSS\n정보처리기사",
        introduction: "열정적인 프론트엔드 개발자로 사용자 경험을 최우선으로 생각합니다.",
        interview_goal: "대기업 프론트엔드 개발자 포지션 합격을 목표로 면접 실력을 향상시키고 싶습니다."
    };

    // Show section based on menu selection
    function showSection(sectionName) {
        // Hide all sections
        document.querySelectorAll('.content-section').forEach(section => {
            section.classList.add('hidden');
        });

        // Remove active class from all menu items
        document.querySelectorAll('.menu-item').forEach(item => {
            item.classList.remove('active');
            item.classList.add('text-gray-700');
        });

        // Show selected section
        const sectionMap = {
            'profile': 'profileSection',
            'resume': 'resumeSection',
            'history': 'historySection',
            'documents': 'documentsSection'
        };

        const targetSection = document.getElementById(sectionMap[sectionName]);
        if (targetSection) {
            targetSection.classList.remove('hidden');
        }

        // Add active class to clicked menu item
        const activeItem = document.querySelector(`[data-section="${sectionName}"]`);
        if (activeItem) {
            activeItem.classList.add('active');
            activeItem.classList.remove('text-gray-700');
        }
    }

    // Toggle between view and edit mode
    function toggleEditMode() {
        const viewMode = document.getElementById('viewMode');
        const editMode = document.getElementById('editMode');

        if (viewMode.classList.contains('hidden')) {
            viewMode.classList.remove('hidden');
            editMode.classList.add('hidden');
            loadViewData();
        } else {
            viewMode.classList.add('hidden');
            editMode.classList.remove('hidden');
            loadEditData();
        }
    }

    // Load data into view mode
    function loadViewData() {
        for (const [key, value] of Object.entries(userData)) {
            const element = document.getElementById('view_' + key);
            if (element) {
                element.textContent = value || '-';
            }
        }
    }

    // Load data into edit mode
    function loadEditData() {
        for (const [key, value] of Object.entries(userData)) {
            const element = document.getElementById('edit_' + key);
            if (element) {
                element.value = value || '';
            }
        }
    }

    // Handle form submission
    document.getElementById('profileForm').addEventListener('submit', function(e) {
        e.preventDefault();

        const formData = new FormData(this);
        const data = Object.fromEntries(formData.entries());

        Object.assign(userData, data);
        console.log('Updated profile data:', userData);

        alert('프로필이 성공적으로 저장되었습니다!');

        toggleEditMode();
    });

    // Initialize page
    document.addEventListener('DOMContentLoaded', function() {
        loadViewData();

        const fadeElements = document.querySelectorAll('.fade-in');
        fadeElements.forEach((el, index) => {
            setTimeout(() => {
                el.style.opacity = '1';
            }, index * 100);
        });
    });
</script>
